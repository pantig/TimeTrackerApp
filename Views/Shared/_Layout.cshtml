<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - System Rejestracji Czasu Pracy</title>
    <!-- Aero Style v2.0 -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<nav class="navbar">
    <div class="container">
        <a asp-controller="TimeEntries" asp-action="Index" class="navbar-brand"><span>‚è±Ô∏è</span> TimeTracker</a>
        <div class="navbar-menu">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Calendar" asp-action="Index">Kalendarz</a>
                <a asp-controller="TimeEntries" asp-action="Index">Wpisy</a>
                <a asp-controller="Reports" asp-action="Summary">Raporty</a>
                <a asp-controller="Reports" asp-action="Monthly">Raport miesiƒôczny</a>
                
                @* Link dla pracownik√≥w - Moje wpisy bez projektu *@
                @if (User.IsInRole("Employee"))
                {
                    <a asp-controller="NoProjectReport" asp-action="MyEntries" style="color: #eab308;">‚ö†Ô∏è Brak projektu</a>
                }
                
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a asp-controller="Projects" asp-action="Index">Projekty</a>
                    <a asp-controller="Employees" asp-action="Index">Pracownicy</a>
                    @* Link dla manager√≥w - Wszystkie wpisy bez projektu *@
                    <a asp-controller="NoProjectReport" asp-action="AllEntries" style="color: #eab308;">‚ö†Ô∏è Wszystkie bez projektu</a>
                }
                <span class="username">üë§ @User.Identity.Name</span>
                <form method="post" asp-controller="Account" asp-action="Logout" style="display:inline;">
                    <button type="submit" class="btn-logout">Wyloguj</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Logowanie</a>
                <a asp-controller="Account" asp-action="Register">Rejestracja</a>
            }
        </div>
    </div>
</nav>

<div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @RenderBody()
</div>

<footer class="footer">
    <p>&copy; 2026 System Rejestracji Czasu Pracy - Projekt Zaliczeniowy</p>
</footer>

@RenderSection("Scripts", required: false)
</body>
</html>