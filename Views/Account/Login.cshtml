@model LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="auth-container">
    <div class="auth-card">
        <h1>Logowanie</h1>
        
        <form method="post" class="form">
            <div asp-validation-summary="ModelOnly" class="error-summary"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                <span asp-validation-for="Email" class="error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="error"></span>
            </div>

            <div class="form-group">
                <label>
                    <input asp-for="RememberMe" type="checkbox" />
                    Pamiętaj mnie
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Zaloguj</button>
        </form>

        <p class="auth-link">
            Nie masz konta? <a href="/Account/Register">Zarejestruj się</a>
        </p>

        <div class="demo-credentials">
            <h4>Dane demonstracyjne:</h4>
            <p>Admin: admin@example.com / admin123</p>
            <p>Manager: manager@example.com / manager123</p>
            <p>Employee: employee@example.com / employee123</p>
        </div>
    </div>
</div>