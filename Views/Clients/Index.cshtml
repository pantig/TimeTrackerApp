@model IEnumerable<TimeTrackerApp.Models.Client>

@{
    ViewData["Title"] = "Klienci";
}

<div style="margin-top: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h2 style="margin: 0;">Klienci</h2>
            <p class="hint" style="margin-top: 0.5rem;">ZarzÄ…dzanie klientami i ich projektami</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">+ Dodaj klienta</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Miasto</th>
                <th>NIP</th>
                <th>Liczba projektÃ³w</th>
                <th>Status</th>
                <th style="text-align: center;">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td><strong>@client.Name</strong></td>
                    <td>@(client.Email ?? "(brak)")</td>
                    <td>@(client.Phone ?? "(brak)")</td>
                    <td>@(client.City ?? "(brak)")</td>
                    <td>@(client.NIP ?? "(brak)")</td>
                    <td><span class="badge badge-secondary">@client.Projects.Count</span></td>
                    <td>
                        @if (client.IsActive)
                        {
                            <span class="badge badge-success">Aktywny</span>
                        }
                        else
                        {
                            <span style="display: inline-flex; align-items: center; gap: 0.25rem; padding: 0.25rem 1rem; font-size: 0.8125rem; font-weight: 500; border-radius: 0.5rem; background: rgba(163, 163, 163, 0.1); color: var(--text-tertiary);">Nieaktywny</span>
                        }
                    </td>
                    <td style="text-align: center;">
                        <div style="display: flex; gap: 0.5rem; justify-content: center;">
                            <a asp-action="Report" asp-route-id="@client.Id" class="btn btn-primary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">ðŸ“ˆ Raport</a>
                            <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-secondary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">SzczegÃ³Å‚y</a>
                            <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-secondary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-danger" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">UsuÅ„</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div style="text-align: center; padding: 3rem; color: var(--text-tertiary);">
            <p>Brak klientÃ³w w systemie.</p>
            <a asp-action="Create" class="btn btn-primary" style="margin-top: 1rem;">Dodaj pierwszego klienta</a>
        </div>
    }
</div>
