@using TimeTrackerApp.Models
@model List<TimeEntry>

@{
    ViewData["Title"] = "Wpisy Czasu";
}

<div class="page-header">
    <h1>Wpisy Czasu</h1>
    <a asp-action="Create" class="btn btn-primary">+ Nowy wpis</a>
</div>

<table class="data-table">
    <thead>
    <tr>
        <th>Pracownik</th>
        <th>Data</th>
        <th>Od</th>
        <th>Do</th>
        <th>Godziny</th>
        <th>Projekt</th>
        <th>Opis</th>
        <th>Status</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var entry in Model)
    {
        <tr>
            <td>@(entry.Employee?.User?.FirstName + " " + entry.Employee?.User?.LastName)</td>
            <td>@entry.EntryDate.ToString("yyyy-MM-dd")</td>
            <td>@entry.StartTime.ToString(@"hh\:mm")</td>
            <td>@entry.EndTime.ToString(@"hh\:mm")</td>
            <td>@entry.TotalHours.ToString("F2")</td>
            <td>@(entry.Project?.Name ?? "-")</td>
            <td>@entry.Description</td>
            <td>
                <span class="badge @(entry.IsApproved ? "badge-success" : "badge-warning")">
                    @(entry.IsApproved ? "Zatwierdzone" : "Oczekujące")
                </span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@entry.Id" class="btn-sm">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@entry.Id" class="btn-sm btn-danger">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>