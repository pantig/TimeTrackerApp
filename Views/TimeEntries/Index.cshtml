@model IEnumerable<TimeTrackerApp.Models.TimeEntry>

@{
    ViewData["Title"] = "Wpisy czasu";
}

<div style="margin-top: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h2 style="margin: 0;">Wpisy czasu</h2>
            <p class="hint" style="margin-top: 0.5rem;">Historia rejestracji czasu pracy</p>
        </div>
        <div style="display: flex; gap: 0.5rem;">
            <a asp-controller="Calendar" asp-action="Index" class="btn btn-secondary">Kalendarz</a>
            <a asp-action="Create" class="btn btn-primary">+ Dodaj wpis</a>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Data</th>
                <th>Pracownik</th>
                <th>Projekt</th>
                <th>Czas</th>
                <th>Godziny</th>
                <th>Opis</th>
                <th>Status</th>
                <th>Dodane przez</th>
                <th style="text-align: center;">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.EntryDate.ToString("yyyy-MM-dd")</td>
                    <td><strong>@entry.Employee.User.LastName @entry.Employee.User.FirstName</strong></td>
                    <td>@(entry.Project?.Name ?? "<span style='color: var(--text-tertiary);'>(brak)</span>")</td>
                    <td>@entry.StartTime.ToString(@"hh\:mm") – @entry.EndTime.ToString(@"hh\:mm")</td>
                    <td><strong>@entry.TotalHours.ToString("0.0")h</strong></td>
                    <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                        @(string.IsNullOrEmpty(entry.Description) ? "<span style='color: var(--text-tertiary);'>(brak opisu)</span>" : entry.Description)
                    </td>
                    <td>
                        @if (entry.IsApproved)
                        {
                            <span class="badge badge-success">Zatwierdzony</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">Oczekuje</span>
                        }
                    </td>
                    <td>
                        <span style="font-size: 0.8125rem; color: var(--text-tertiary);">
                            ✍️ @(entry.CreatedByUser != null ? $"{entry.CreatedByUser.FirstName} {entry.CreatedByUser.LastName}" : "System")
                        </span>
                    </td>
                    <td style="text-align: center;">
                        <div style="display: flex; gap: 0.5rem; justify-content: center;">
                            @if (!entry.IsApproved)
                            {
                                <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-secondary" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger" style="font-size: 0.875rem; padding: 0.375rem 0.75rem;">Usuń</a>
                            }
                            else
                            {
                                <span style="color: var(--text-tertiary); font-size: 0.875rem;">—</span>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div style="text-align: center; padding: 3rem; color: var(--text-tertiary);">
            <p>Brak wpisów czasu.</p>
            <a asp-action="Create" class="btn btn-primary" style="margin-top: 1rem;">Dodaj pierwszy wpis</a>
        </div>
    }
</div>
