@using TimeTrackerApp.Models
@model TimeEntry

@{
    ViewData["Title"] = "Usuń wpis czasu";
}

<div class="form-container">
    <h1>Usuń wpis czasu</h1>
    <p class="alert alert-danger">Czy na pewno chcesz usunąć ten wpis czasu?</p>

    <div class="details-section">
        <dl class="row">
            <dt class="col-sm-4">Pracownik</dt>
            <dd class="col-sm-8">@Model.Employee?.EmployeeNumber</dd>

            <dt class="col-sm-4">Data</dt>
            <dd class="col-sm-8">@Model.EntryDate.ToShortDateString()</dd>

            <dt class="col-sm-4">Czas</dt>
            <dd class="col-sm-8">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm") (@Model.TotalHours.ToString("F2") h)</dd>

            <dt class="col-sm-4">Opis</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="form-actions">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
